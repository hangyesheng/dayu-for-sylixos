ARCH arm64

MOUNT /bin/javascript /bin/javascript rx

MOUNT /lib /lib rx

MOUNT /qt /qt rx

MOUNT /usr/bin /usr/bin rx

MOUNT /usr/lib /usr/lib rx

ENV PATH=/usr/bin:/bin:/usr/pkg/sbin:/sbin:/usr/local/bin

ENV LD_LIBRARY_PATH=/qt/lib:/usr/lib:/lib:/usr/local/lib:/lib/jsre:/lib/vsoa



ENV TZ=Asia/Shanghai

COPY ../../dependency_for_sylixos/core /apps/controller/core

WORKDIR /apps/controller
COPY ../../components_for_sylixos/controller /apps/controller

CMD python /apps/controller/main.py

